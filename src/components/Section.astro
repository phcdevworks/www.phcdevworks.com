---
interface Props {
  tag?: keyof HTMLElementTagNameMap;
  class?: string;
  innerClass?: string;
  noContainer?: boolean;
}

const {
  tag = "section",
  class: className = "",
  innerClass = "",
  noContainer = false,
  ...rest
} = Astro.props satisfies Props;

const Tag = tag;
const sectionClass = [
  "px-4 sm:px-6 lg:px-12",
  "py-16 sm:py-20 lg:py-24",
  className,
]
  .filter(Boolean)
  .join(" ");

const containerClass = ["max-w-[1200px] w-full mx-auto", innerClass]
  .filter(Boolean)
  .join(" ");
---

<Tag class={sectionClass} {...rest}>
  {noContainer ? (
    <slot />
  ) : (
    <div class={containerClass}>
      <slot />
    </div>
  )}
</Tag>
