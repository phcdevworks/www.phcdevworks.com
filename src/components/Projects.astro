import Section from "./Section.astro";
import { projects } from "../data/projects";

const headingId = "projects-heading";
---

<Section aria-labelledby={headingId}>
  <h2
    id={headingId}
    class="text-[clamp(2.25rem,7vw,5.5rem)] font-black mb-10 sm:mb-14 lg:mb-20 tracking-[-0.03em]"
  >
    PROJECTS
  </h2>

  <div class="grid gap-8 sm:gap-12 lg:gap-16">
    {projects.map((project) => (
      <article
        class="border-t-4 sm:border-t-0 sm:border-l-4 border-[#ff0055] pt-4 sm:pt-0 pl-0 sm:pl-6 lg:pl-8"
        aria-labelledby={`${project.id}-title`}
      >
        <h3
          id={`${project.id}-title`}
          class="text-[clamp(1.5rem,4vw,3rem)] font-black mb-3 tracking-[-0.02em]"
        >
          <a
            href={project.href}
            class="text-[#ff0055] no-underline border-b-2 sm:border-b-4 border-[#ff0055] break-all"
          >
            {project.title}
          </a>
        </h3>
        <p class="text-[clamp(1.0625rem,2.25vw,1.375rem)] leading-relaxed opacity-80">
          {project.description}
        </p>
      </article>
    ))}
  </div>
</Section>
