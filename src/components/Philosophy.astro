---
const statements = [
  {
    segments: [
      { text: "Design tokens once. " },
      { text: "Use everywhere.", highlight: true },
    ],
  },
  {
    segments: [
      { text: "Tokens feed CSS. " },
      { text: "CSS feeds components.", highlight: true },
    ],
  },
  {
    segments: [
      { text: "Open source.", highlight: true },
      { text: " No vendor lock." },
    ],
  },
  {
    segments: [
      { text: "Build what you need. " },
      { text: "Modify what you want.", highlight: true },
    ],
  },
];
---

<section
  class="px-8 py-20 sm:px-16 md:px-24 lg:px-32 sm:py-24 bg-white dark:bg-gray-900"
>
  <h2
    class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black mb-14 tracking-tight text-gray-900 dark:text-gray-100"
  >
    PHILOSOPHY
  </h2>
  {
    statements.map(({ segments }, index) => (
      <p
        class={`text-xl sm:text-2xl md:text-3xl lg:text-4xl font-black leading-tight tracking-tight text-gray-900 dark:text-gray-100 ${
          index < statements.length - 1 ? "mb-10" : ""
        }`}
      >
        {segments.map(({ text, highlight }) =>
          highlight ? <span class="text-[#ff0055]">{text}</span> : text
        )}
      </p>
    ))
  }
</section>
