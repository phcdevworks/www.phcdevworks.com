---
import "@phcdevworks/spectre-ui/base.css";
import "@phcdevworks/spectre-ui/components.css";
import "@phcdevworks/spectre-ui/utilities.css";

const {
  title = "PHCDevworks",
  description = "PHCDevworks is a developer-first software studio specializing in cross-platform design systems, high-performance WordPress products, and modern UI tooling.",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        background: #0a0a0a;
        color: #ffffff;
        font-family:
          "Inter",
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          sans-serif;
        overflow-x: hidden;
        line-height: 1.5;
      }

      .mega {
        font-weight: 900;
        font-size: clamp(6rem, 20vw, 18rem);
        line-height: 0.85;
        letter-spacing: -0.05em;
        text-transform: uppercase;
        margin: 0;
      }

      .ultra {
        font-weight: 900;
        font-size: clamp(3.5rem, 12vw, 10rem);
        line-height: 0.9;
        letter-spacing: -0.04em;
        text-transform: uppercase;
        margin: 0;
      }

      .massive {
        font-weight: 900;
        font-size: clamp(2.5rem, 8vw, 7rem);
        line-height: 0.95;
        letter-spacing: -0.03em;
        text-transform: uppercase;
      }

      .huge {
        font-weight: 700;
        font-size: clamp(2rem, 5vw, 4.5rem);
        line-height: 1.15;
        letter-spacing: -0.02em;
      }

      .big {
        font-weight: 700;
        font-size: clamp(1.5rem, 3vw, 2.5rem);
        line-height: 1.3;
        letter-spacing: -0.015em;
      }

      .body {
        font-weight: 400;
        font-size: clamp(1.125rem, 1.75vw, 1.5rem);
        line-height: 1.6;
        opacity: 0.8;
      }

      .small {
        font-size: clamp(1rem, 1.25vw, 1.125rem);
        line-height: 1.5;
        opacity: 0.6;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .red {
        color: #ff0055;
      }

      .block-red {
        background: #ff0055;
        color: #000000;
        padding: 0.25em 0.6em;
        display: inline-block;
        font-weight: 900;
        box-shadow: 8px 8px 0 rgba(255, 0, 85, 0.3);
      }

      .link {
        color: #ff0055;
        text-decoration: none;
        border-bottom: 5px solid #ff0055;
        transition: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);
        font-weight: 700;
      }

      .link:hover {
        color: #ffffff;
        border-bottom-color: #ffffff;
        transform: translateX(8px);
      }

      .bar {
        width: 100%;
        height: 8px;
        background: #ff0055;
        margin: 8rem 0;
      }

      .block-red {
        background: #ff0000;
        color: #000000;
        padding: 0.5rem 1rem;
        display: inline-block;
      }

      .rotate-1 {
        display: inline-block;
        transform: rotate(-1deg);
      }

      .rotate-2 {
        display: inline-block;
        transform: rotate(2deg);
      }
    </style>
  </head>
  <body style="min-height: 100vh; display: flex; flex-direction: column;">
    <main
      style="flex: 1; max-width: 1600px; margin: 0 auto; padding: 8rem 3rem;"
    >
      <slot />
    </main>
  </body>
</html>
