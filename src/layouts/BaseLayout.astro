---
import "../styles/tailwind.css";
import "@phcdevworks/spectre-ui/base.css";
import "@phcdevworks/spectre-ui/components.css";
import "@phcdevworks/spectre-ui/utilities.css";

const {
  title = "PHCDevworks",
  description = "PHCDevworks is a developer-first software studio specializing in cross-platform design systems, high-performance WordPress products, and modern UI tooling.",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="min-h-screen flex flex-col bg-[#0a0a0a] text-white font-['Inter',-apple-system,BlinkMacSystemFont,'Segoe_UI',sans-serif] overflow-x-hidden leading-normal"
  >
    <main class="flex-1 max-w-[1600px] mx-auto px-12 py-32">
      <slot />
    </main>
  </body>
</html>
