---
import "@phcdevworks/spectre-ui/base.css";
import "@phcdevworks/spectre-ui/components.css";
import "@phcdevworks/spectre-ui/utilities.css";

const {
  title = "PHCDevworks",
  description = "PHCDevworks is a developer-first software studio specializing in cross-platform design systems, high-performance WordPress products, and modern UI tooling.",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        background: #0a0a0a;
        color: #ffffff;
        font-family:
          "Inter",
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          sans-serif;
        overflow-x: hidden;
        line-height: 1.5;
      }

      .mega {
        font-weight: 900;
        font-size: clamp(4rem, 15vw, 12rem);
        line-height: 0.9;
        letter-spacing: -0.04em;
        text-transform: uppercase;
        margin: 0;
      }

      .ultra {
        font-weight: 900;
        font-size: clamp(3rem, 10vw, 8rem);
        line-height: 0.95;
        letter-spacing: -0.03em;
        text-transform: uppercase;
        margin: 0;
      }

      .massive {
        font-weight: 900;
        font-size: clamp(2rem, 6vw, 5rem);
        line-height: 1;
        letter-spacing: -0.02em;
        text-transform: uppercase;
      }

      .huge {
        font-weight: 700;
        font-size: clamp(1.75rem, 4vw, 3.5rem);
        line-height: 1.15;
        letter-spacing: -0.015em;
      }

      .big {
        font-weight: 700;
        font-size: clamp(1.25rem, 2.5vw, 2rem);
        line-height: 1.3;
        letter-spacing: -0.01em;
      }

      .body {
        font-weight: 400;
        font-size: clamp(1rem, 1.5vw, 1.25rem);
        line-height: 1.6;
        opacity: 0.8;
      }

      .small {
        font-size: clamp(0.875rem, 1.25vw, 1rem);
        line-height: 1.5;
        opacity: 0.5;
      }

      .red {
        color: #ff3366;
      }

      .block-red {
        background: #ff3366;
        color: #000000;
        padding: 0.2em 0.5em;
        display: inline-block;
        font-weight: 900;
      }

      .link {
        color: #ff3366;
        text-decoration: none;
        border-bottom: 3px solid #ff3366;
        transition: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);
        font-weight: 700;
      }

      .link:hover {
        color: #ff0000;
        border-bottom-color: #ffffff;
      }

      .block-red {
        background: #ff0000;
        color: #000000;
        padding: 0.5rem 1rem;
        display: inline-block;
      }

      .rotate-1 {
        display: inline-block;
        transform: rotate(-1deg);
      }

      .rotate-2 {
        display: inline-block;
        transform: rotate(2deg);
      }
    </style>
  </head>
  <body style="min-height: 100vh; display: flex; flex-direction: column;">
    <main style="flex: 1;">
      <slot />
    </main>
  </body>
</html>
