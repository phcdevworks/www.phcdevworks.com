---
import Facebook from "../../icons/social-media-facebook.svg";
import X from "../../icons/social-media-x.svg";
import GitHub from "../../icons/social-media-github.svg";
import LinkedIn from "../../icons/social-media-linkedin.svg";
const socialLinks = [
  {
    name: "Facebook",
    href: "https://go.phcdev.co/facebook",
    Icon: Facebook,
  },
  { name: "X", href: "https://go.phcdev.co/x", Icon: X },
  { name: "GitHub", href: "https://go.phcdev.co/github", Icon: GitHub },
  {
    name: "LinkedIn",
    href: "https://go.phcdev.co/linkedin",
    Icon: LinkedIn,
  },
];
const navLinks = [
  { label: "Home", href: "/" },
  { label: "Spectre Platform", href: "/spectre-platform" },
];
const year = new Date().getFullYear();
---

<div class="mx-auto max-w-7xl px-6 py-20 sm:py-24 lg:px-8">
  <nav
    aria-label="Footer"
    class="-mb-6 flex flex-wrap justify-center gap-x-12 gap-y-3 text-sm/6"
  >
    {
      navLinks.map(({ label, href }) => (
        <a
          href={href}
          title={label}
          aria-label={label}
          class="text-gray-600 hover:text-gray-900"
        >
          {label}
        </a>
      ))
    }
  </nav>

  <div class="mt-16 flex justify-center gap-x-10">
    {
      socialLinks.map(({ name, href, Icon }) => (
        <a href={href} aria-label={name}>
          <Icon
            class="size-6 fill-current text-gray-700 dark:text-gray-300"
            aria-hidden="true"
          />
        </a>
      ))
    }
  </div>

  <p class="mt-10 text-center text-sm/6 text-gray-500 dark:text-gray-400">
    &copy; {year} PHCDevworks. All rights reserved.
  </p>
</div>
